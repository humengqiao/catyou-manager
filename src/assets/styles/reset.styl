*
  box-sizing border-box

html, body, ul, li, p
  padding 0
  margin 0

header, input, button,
[role="heading"]
  outline none
  appearance none

input:-internal-autofill-selected
  box-shadow inset 0 0 0 1000px #fff !important
	background #fff

h1, h2, h3, h4, h5
  margin 10px 0

ul,
li,
ol,
dt,
dd
  list-style none

a,
a:hover,
a:active,
a:link,
a:visited
  color #000
  text-decoration none

input:-internal-autofill-selected
	box-shadow none !important
	background #fff
